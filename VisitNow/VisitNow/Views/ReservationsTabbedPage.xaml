                                    FontSize="Small" />
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="3"
                                    HorizontalOptions="End"
                                    LineBreakMode="NoWrap"
                                    Text="{Binding Value}"
                                    FontSize="Small"
                                    FontAttributes="Bold"
                                    TextColor="SteelBlue"/>
                                <Label
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="3"
                                    LineBreakMode="NoWrap"
                                    Style="{DynamicResource ListItemTextStyle}">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <FormattedString.Spans>
                                                <Span Text="{Binding Name}" FontSize="Small" />
                                                <Span Text=" - " FontSize="Small" />
                                                <Span Text="{Binding Text}" FontSize="Micro" />
                                            </FormattedString.Spans>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                            </Grid>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage>
</TabbedPage>